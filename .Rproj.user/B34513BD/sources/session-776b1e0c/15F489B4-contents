# 01-data-import.R

library(readr)    
library(dplyr)   
library(here) 

path_data <- here::here("data")          
path_output <- here::here("outputs")

if (!dir.exists(path_data)) dir.create(path_data)
if (!dir.exists(path_output)) dir.create(path_output)


vehicle_sales <- read_csv(file.path(path_data, "car_prices.csv"))

str(vehicle_sales)  
head(vehicle_sales)  

saveRDS(vehicle_sales, file.path(path_output, "vehicle_sales_raw.rds"))

cat("Data imported successfully and saved as RDS.\n")
