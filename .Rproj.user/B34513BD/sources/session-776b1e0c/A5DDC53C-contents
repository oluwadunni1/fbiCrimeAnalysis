  tab_style(style = list(cell_text(color = "black")), locations = cells_body(columns = adoption_rate, rows = adoption_rate >= 25 & adoption_rate <= 70)) |> 
  opt_row_striping()
gtsave(florida_table, file.path(output_tables_dir, "florida_table.html"))